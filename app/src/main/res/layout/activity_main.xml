<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlsn:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:xmlsn="http://schemas.android.com/tools"
    android:background="@drawable/luchtdag"
    android:paddingBottom="150dp"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


  <Button
      android:id="@+id/btnAlles"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="22dp"
      android:padding="20dp"
      android:paddingLeft="50dp"
      android:paddingRight="50dp"
      android:text="Alle modules"
      android:onClick="naarAlles"
      tools:layout_editor_absoluteX="123dp" />
  <Button
      android:id="@+id/btnMijn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:padding="20dp"
      android:paddingLeft="50dp"
      android:paddingRight="50dp"
      android:text="Mijn Modules"
      android:onClick="naarMijn"
      tools:layout_editor_absoluteX="123dp" />



</LinearLayout>